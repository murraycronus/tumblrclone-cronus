<div class="col-sm-8 col-sm-offset-2">
  <div class="well">
    <p class="comment_name"><em><%= comment.name %></em></p>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><small><%= time_ago_in_words(comment.created_at) %></small></p>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "btn btn-danger btn-sm" %></p>
  </div>
</div>
