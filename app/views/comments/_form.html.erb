<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="form-group"
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </p>
  </div>

  <div class="form-group">
    <p>
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </p>
  </div>

  <div class="form-group">
    <p>
      <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
    </p>
  </div>
<% end %>
